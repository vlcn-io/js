{
  "compilerOptions": {
    "outDir": "./dist-server",
    "rootDir": "./",
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "module": "esnext",
    "target": "esnext",
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "baseUrl": "./server/",
    "declaration": false,
    "allowJs": true,
    "declarationMap": false,
    "strict": true
  },
  "include": ["./server"],
  "exclude": []
}
